<UserControl x:Class="CS_361_Sliding_Puzzle.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS_361_Sliding_Puzzle"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600" Height="600" Width="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="PlayButton" Content="Play" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Height="60" Width="150" FontSize="36" Click="PlayButtonClick" Visibility="Visible"/>
        <Button x:Name="QuitButton" Content="Exit" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Height="60" Width="150" FontSize="36" Click="QuitButton_Click"/>
        <Label Content="Sliding Puzzle Game" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Height="79" Width="489" FontSize="48" HorizontalContentAlignment="Center" Background="{x:Null}" Foreground="White"/>

    </Grid>
</UserControl>
